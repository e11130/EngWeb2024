extends layout

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1  
                span Contratos List 


        .w3-container   
            table.w3-table-all 
                tr 
                    th Id
                    th Objeto   
                    th Data Celebracao 
                    th Preco Contratual  
                    th NIPC Entidade Comunicante 
                    th Entidade Comunicante 


                each contrato in lContratos
                    tr 
                        td= contrato.idcontrato
                        td= contrato.objetoContrato
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td= contrato.NIPC_entidade_comunicante
                        td= contrato.entidade_comunicante
                        
        footer.w3-container.w3-blue
            h5 Generated by RPCW2023 in #{date}