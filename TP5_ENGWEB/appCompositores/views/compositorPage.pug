extends layout
block content
    .w3-card-4
            header.w3-container.w3-teal
                h1 Compositor #{compositor.id}

            .w3-container
            .w3-ul.w3-card-4(style="width:50%")
                    li
                        b Id: 
                        span= compositor.id 
                    li
                        b Nome: 
                        span= compositor.nome
                    li
                        b Bio:
                        span= compositor.bio
                    li
                        b DataNasc:
                        span= compositor.dataNasc
                    li
                        b DataObito:
                        span= compositor.dataObito
                    li
                        b Periodo:
                        span= compositor.periodo
    
    

            footer.w3-container.w3-teal
                address
                    span Gerado por galuno::RPCW2022 em #{data} - [
                    a(href="/") Voltar
                    span ]
