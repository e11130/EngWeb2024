extends layout

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1  
                span #{author}


        .w3-container  
            .w3-responsive 
                table.w3-table-all 
                    tr 
                        th Id
                        th Title  
                        th Publish Date 
                        th Pages 
                    

                    each b in lBooks
                        tr 
                            td= book.bookId 
                            td= book.title
                            td= book.publishDate 
                            td= book.pages
                    tr 
                        th Suma =  #{suma}
                    
                        

        footer.w3-container.w3-blue
            address
                h5 Generated by RPCW2023 in #{date}- [
                a(href="/") Voltar
                span ]