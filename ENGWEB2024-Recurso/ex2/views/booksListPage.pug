extends layout

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1  
                span Books List 


        .w3-container  
            .w3-responsive 
                table.w3-table-all 
                    tr 
                        th Id
                        th Title  
                        th Author 
                        th Publish Date 
                        th Pages 

                    each b in lBooks
                        tr 
                            td
                                a(href="/"+ b.bookId)= b.bookId 
                            td= b.title
                            td
                                a(href="/authors/"+ b.author)= b.author
                            td= b.publishDate
                            td= b.pages

        footer.w3-container.w3-blue
            h5 Generated by RPCW2023 in #{date}