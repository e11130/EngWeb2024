extends layout

block content
            .modal(id="display")
            .w3-card-4
                header.w3-container.w3-teal
                    h1 UC #{uc.titulo}
                    //- cambios desativar
                    a.w3-btn.w3-round.w3-grey.w3-display-topright.w3-margin-right(href="/user/" + username + "/desativar") LogOut
                .w3-container
                    h2 Docentes
                    each docente in uc.docentes
                        .w3-ul.w3-card-4(style="width:100%")
                            if docente.nome
                                li
                                    b Nome:
                                    span= docente.nome
                            if docente.categoria
                                li
                                    b Categoria:
                                    span= docente.categoria
                            if docente.filiacao
                                li
                                    b Filiacao:
                                    span= docente.filiacao
                            if docente.email
                                li
                                    b Email:
                                    span= docente.email
                            if docente.webpage
                                li
                                    b Webpage:
                                    span= docente.webpage
                    
                    h2 Horarios
                    .w3-ul.w3-card-4(style="width:100%")
                        h3 Teóricas
                            //- li= uc.horario.teoricas
                            ul
                                each teorica in uc.horario.teoricas
                                    li= teorica

                        h3 Práticas
                            //- li= uc.horario.praticas
                            ul
                                each pratica in uc.horario.praticas
                                    li= pratica

                            
                    h2 Avaliação
                    .w3-ul.w3-card-4(style="width:100%")
                            ul
                                each av in uc.avaliacao
                                    li= av

                    h2 Datas
                    .w3-ul.w3-card-4(style="width:100%")
                        li
                            b Teste:
                            span= uc.datas.teste
                        li
                            b Exame:
                            span= uc.datas.exame
                        li
                            b Projeto:
                            span= uc.datas.projeto

            .w3-card-4
                .w3-container

                    h2 Aulas
                    each aula in uc.aulas
                        .w3-ul.w3-card-4(style="width:100%")
                            li
                                b Tipo:
                                span= aula.tipo
                            li
                                b Data:
                                span= aula.data
                            li
                                b Sumário:
                                //- span= aula.sumario
                                each s in aula.sumario 
                                    li= s
                    .w3-card-4 
                        header.w3-indigo 
                        h2 File List 
                        .w3-container 
                        table.w3-table-all 
                            tr 
                                th Date 
                                th File 
                                th Size
                                th Type 
                            each f in files 
                                tr(onclick='showImage(\"' + f.name + '\", \"' + f.mimetype + '\")')
                                    td= f.date 
                                    td= f.name 
                                    td= f.size 
                                    td= f.mimetype 

                footer.w3-container.w3-blue
                    address
                        span Generated by Ñoles in #{new Date().toLocaleDateString()} - [
                        a(href="/user/" + username) Voltar
                        span ]