extends layout

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1  
                span Lista de Usuarios
                

        .w3-container   
            table.w3-table-all 
                tr 
                    th Username  
                    th Name
                    th Level
                    th DateCreated
                    th Asignaturas

                each user in lUsers
                    tr 
                        td= user.username
                        td= user.name
                        td= user.level
                        td= user.dateCreated
                        td
                            each asig in user.asignaturas
                                p= asig
                        td 
                            span [
                            a(href="/user/delete/"+user.username) Delete
                            span ]
        footer.w3-container.w3-blue
