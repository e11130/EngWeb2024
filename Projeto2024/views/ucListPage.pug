extends layout

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1  
                span Lista de asignaturas
                a.w3-btn.w3-round.w3-grey(href="/uc/addUc") +
                a.w3-btn.w3-round.w3-grey.w3-display-topright.w3-margin-right(href="/user/" + username + "/desativar") LogOut
            


        .w3-container   
            table.w3-table-all 
                tr 
                    th Sigla  
                    th Actions 

                each uc in lUcs
                    tr 
                        td 
                            a(href="/uc/"+uc.sigla)= uc.sigla
                        td 
                            span [
                            a(href="/uc/edit/"+uc.sigla) Edit
                            span ]
                            span [
                            a(href="/uc/delete/"+uc.sigla) Delete
                            span ]
