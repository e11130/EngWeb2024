extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Adicionar Avaliaçao

        form.w3-container(method="POST")
            fieldset
                legend Nova Avaliação
                label Avaliação
                    input.w3-input.w3-round(type="text" name="novaAvaliacao" required)

            button.w3-btn.w3-green.w3-mb-2(type="submit") Adicionar Avaliação

        footer.w3-container.w3-blue
            h5
                span Generated by Ñoles in #{new Date().toLocaleDateString()} - [
                    a(href=`/uc/edit/${uc.sigla}`) Voltar
                span ]
