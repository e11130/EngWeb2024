extends layout

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1  
                span Register

        form.w3-container(method="POST")
                    fieldset 
                        legend Personal Data
                        label Username
                        input.w3-input.w3-round(type="text" name="username")
                        label Password 
                        input.w3-input.w3-round(type="text" name="password")
                        label Name 
                        input.w3-input.w3-round(type="text" name="name")
                        label Level 
                        .w3-margin-top
                                input.w3-radio(type="radio" name="level" value= "Administrador")
                                label Administrador
                        .w3-margin-top
                                input.w3-radio(type="radio" name="level" value= "Docente")
                                label Docente
                        .w3-margin-top
                                input.w3-radio(type="radio" name="level" value= "Aluno")
                                label Aluno
                        br
                        label Asignaturas 
                        each uc in lUcs
                            .w3-margin-top
                                input.w3-check(type="checkbox" name="asignaturas" value=uc.sigla)
                                label= uc.titulo
                        
                        
                    button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
                    
        footer.w3-container.w3-blue
