extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 User Edit Form

        form.w3-container(method="POST" )
                fieldset
                    legend Info
                    label Username
                    input.w3-input.w3-round(type="text" name="username" value= user.username readonly)
                    label Nome
                    input.w3-input.w3-round(type="text" name="name" value= user.name)
                    label Asignaturas 
                    each uc in lUcs
                        .w3-margin-top
                            input.w3-check(type="checkbox" name="asignaturas" value=uc.sigla checked=(selectedUcs && selectedUcs.includes(uc.sigla)))
                            label= uc.titulo
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-blue
            h5
