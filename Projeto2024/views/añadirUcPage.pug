extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 UC Form 

        form.w3-container(method="POST" action="/uc/registo")
            fieldset
                legend Info
                label Sigla
                    input.w3-input.w3-round(type="text" name="sigla")
                label Titulo
                    input.w3-input.w3-round(type="text" name="titulo")
            
            fieldset
                legend Docentes
                .w3-card-4.w3-margin
                    .w3-container
                        h3 Docente 1
                        label Nome Docente
                            input.w3-input.w3-round(type="text" name="docentesNome")
                        label Categoria Docente
                            input.w3-input.w3-round(type="text" name="docentesCategoria")
                        label Filiacao Docente
                            input.w3-input.w3-round(type="text" name="docentesFiliacao")
                        label Email Docente
                            input.w3-input.w3-round(type="email" name="docentesEmail")
                        label Webpage Docente
                            input.w3-input.w3-round(type="text" name="docentesWebpage")
                //- .w3-card-4.w3-margin
                //-     .w3-container
                //-         h3 Docente 2
                //-         label Nome Docente
                //-             input.w3-input.w3-round(type="text" name="docentesNome")
                //-         label Categoria Docente
                //-             input.w3-input.w3-round(type="text" name="docentesCategoria")
                //-         label Filiacao Docente
                //-             input.w3-input.w3-round(type="text" name="docentesFiliacao")
                //-         label Email Docente
                //-             input.w3-input.w3-round(type="email" name="docentesEmail")
                //-         label Webpage Docente
                //-             input.w3-input.w3-round(type="text" name="docentesWebpage")

            fieldset
                legend Horarios
                label Teórica
                    input.w3-input.w3-round(type="text" name="teoricas")
                label Prática
                    input.w3-input.w3-round(type="text" name="praticas")

            fieldset
                legend Avaliação
                label Avaliação
                    input.w3-input.w3-round(type="text" name="avaliacao")
                    
            fieldset
                legend Datas
                label Teste
                    input.w3-input.w3-round(type="text" name="teste")
                label Exame
                    input.w3-input.w3-round(type="text" name="exame")
                label Projeto
                    input.w3-input.w3-round(type="text" name="projeto")
            
            fieldset
                legend Aulas
                label Tipo
                    input.w3-input.w3-round(type="text" name="aulasTipo")
                label Data
                    input.w3-input.w3-round(type="text" name="aulasData")
                label Sumario
                    input.w3-input.w3-round(type="text" name="aulasSumario")
                    
            button.w3-btn.w3-green.w3-mb-2(type="submit") Register

        footer.w3-container.w3-blue
            h5
                span Generated by Ñoles in #{new Date().toLocaleDateString()} - [
                span ]
