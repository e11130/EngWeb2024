extends layout

block content
    .w3-row
        .w3-card-4
            header.w3-container.w3-teal
                h1 User #{user.name}
                a.w3-btn.w3-round.w3-grey(href="/user/edit/" + user.username) Edit
                a.w3-btn.w3-round.w3-grey(href="/uc") Lista UCs
                a.w3-btn.w3-round.w3-grey(href="/user") Lista Users
                a.w3-btn.w3-round.w3-grey.w3-display-topright.w3-margin-right(href="/user/" + user.username + "/desativar") LogOut
            
            .w3-container

                h2 Información
                .w3-ul.w3-card-4(style="width:100%")
                    li
                        b Username:
                        span= user.username
                    li
                        b Nome:
                        span= user.name
                    li
                        b Nivel:
                        span= user.level
                    li
                        b Date Creation:
                        span= user.dateCreated

                h2 Asignaturas
                table.w3-table-all 
                    tr 
                        th Sigla  

                    each uc in user.asignaturas
                        tr 
                            td 
                                a(href= "/uc/"+ uc)= uc
                            td
                                span [
                                a(href="/uc/edit/"+ uc) Edit
                                span ]
                
                
                        

            footer.w3-container.w3-blue
                address
                    span Generated by Ñoles in #{new Date().toLocaleDateString()}
