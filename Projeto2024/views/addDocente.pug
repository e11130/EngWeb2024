extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Adicionar Docente

        form.w3-container(method="POST")
            fieldset
                legend Detalhes de Docente
                label Nome Docente
                    input.w3-input.w3-round(type="text" name="nome" required)
                label Categoria Docente
                    input.w3-input.w3-round(type="text" name="categoria")
                label Filiacao Docente
                    input.w3-input.w3-round(type="text" name="filiacao")
                label Email Docente
                    input.w3-input.w3-round(type="email" name="email")
                label Webpage Docente
                    input.w3-input.w3-round(type="text" name="webpage")

            button.w3-btn.w3-green.w3-mb-2(type="submit") Adicionar Docente

        footer.w3-container.w3-blue
            h5
                span Generated by Ã‘oles in #{new Date().toLocaleDateString()} - [
                    a(href=`/uc/edit/${uc.sigla}`) Voltar
                span ]
