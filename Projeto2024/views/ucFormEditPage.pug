extends layout

block content
    .modal(id="display")
    .w3-card-4
        header.w3-container.w3-teal
            h2 UC Form

        form.w3-container(method="POST" )
            fieldset
                legend Info
                label Sigla
                    input.w3-input.w3-round(type="text" name="sigla" value=uc.sigla readonly)
                label Titulo
                    input.w3-input.w3-round(type="text" name="titulo" value=uc.titulo readonly)

            fieldset
                legend Docentes
                    a.w3-btn.w3-round.w3-grey(href=`/uc/${uc.sigla}/addDocente`) +

                each docente in uc.docentes
                    label Nome Docente
                        span [
                            a(href=`/uc/${uc.sigla}/docente/delete/${docente.nome}`) Delete
                        span ]
                        input.w3-input.w3-round(type="text" name="docentesNome" value=docente.nome)
                    label Categoria Docente
                        input.w3-input.w3-round(type="text" name="docentesCategoria" value=docente.categoria)
                    label Filiacao Docente
                        input.w3-input.w3-round(type="text" name="docentesFiliacao" value=docente.filiacao)
                    label Email Docente
                        input.w3-input.w3-round(type="email" name="docentesEmail" value=docente.email)
                    label Webpage Docente
                        input.w3-input.w3-round(type="text" name="docentesWebpage" value=docente.webpage)
            fieldset
                legend Horarios
                each t, index in uc.horario.teoricas
                    label Teórica  #{index + 1}
                        input.w3-input.w3-round(type="text" name="teoricas[#{index}]" value= t)

                each p, index in uc.horario.praticas
                    label Practica  #{index + 1}
                        input.w3-input.w3-round(type="text" name="praticas[#{index}]" value= p)

            fieldset
                legend Avaliação
                    a.w3-btn.w3-round.w3-grey(href=`/uc/${uc.sigla}/addAvaliacao`) +

                each a in uc.avaliacao
                    label Avaliacao
                        span [
                            a(href=`/uc/${uc.sigla}/avaliacao/delete/${a}`) Delete
                        span ]
                        input.w3-input.w3-round(type="text" name="avaliacao" value=a)
                    
            fieldset
                legend Datas
                label Teste
                    input.w3-input.w3-round(type="text" name="teste" value=uc.datas.teste)
                label Exame
                    input.w3-input.w3-round(type="text" name="exame" value=uc.datas.exame)
                label Projeto
                    input.w3-input.w3-round(type="text" name="projeto" value=uc.datas.projeto)
                
            fieldset
                legend Aulas
                    a.w3-btn.w3-round.w3-grey(href=`/uc/${uc.sigla}/addAula`) +

                each a in uc.aulas
                    label Tipo
                        span [
                            a(href=`/uc/${uc.sigla}/aula/delete/${a.tipo}/${a.data}`) Delete                        
                        span ]
                        input.w3-input.w3-round(type="text" name="aulasTipo" value= a.tipo)
                    label Data
                        input.w3-input.w3-round(type="text" name="aulasData" value= a.data)
                    each s in a.sumario
                        label Sumario
                            input.w3-input.w3-round(type="text" name="aulasSumario" value= s)
            .w3-card-4 
                header.w3-indigo 
                h1 File upload 
                a.w3-btn.w3-round.w3-grey(href=`../files/${uc.sigla}`) +
                h2 File List 
                    .w3-container 
                    table.w3-table-all 
                        tr 
                            th Date 
                            th File 
                            th Size
                            th Type 
                        each f in files 
                            tr(onclick='deleteImage(\"' + f.name + '\", \"' + f.mimetype + '\",\"' + uc.sigla + '\")')
                                td= f.date 
                                td= f.name 
                                td= f.size 
                                td= f.mimetype 
                                 
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
        footer.w3-container.w3-blue
            h5
                span Generated by Ñoles in #{new Date().toLocaleDateString()} - [
                span ]
